<%= form_for @match, :html => { :class => "form-horizontal match" } do |f| %>

    <% if @match.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%= pluralize(@match.errors.count, "error") %> prohibited this match from being saved:</h3>
      </div>
      <div class="panel-body">
        <ul>
        <% @match.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="control-group">
    <%= f.label :team1_id, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :team1_id, :class => 'form-control' %>
    </div>
    <%= error_span(@match[:team1_id]) %>
  </div>
  <div class="control-group">
    <%= f.label :team2_id, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :team2_id, :class => 'form-control' %>
    </div>
    <%= error_span(@match[:team2_id]) %>
  </div>
  <div class="control-group">
    <%= f.label :team1_score, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :team1_score, :class => 'form-control' %>
    </div>
    <%= error_span(@match[:team1_score]) %>
  </div>
  <div class="control-group">
    <%= f.label :team2_score, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :team2_score, :class => 'form-control' %>
    </div>
    <%= error_span(@match[:team2_score]) %>
  </div>
  <div class="control-group">
    <%= f.label :season, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :season, :class => 'form-control' %>
    </div>
    <%= error_span(@match[:season]) %>
  </div>


  <%= f.submit nil, :class => 'btn btn-primary' %>
  <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
            matches_path, :class => 'btn btn-default' %>

<% end %>
