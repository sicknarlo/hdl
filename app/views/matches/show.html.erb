<%- model_class = Match -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:team1_id) %>:</strong></dt>
  <dd><%= @match.team1_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:team2_id) %>:</strong></dt>
  <dd><%= @match.team2_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:team1_score) %>:</strong></dt>
  <dd><%= @match.team1_score %></dd>
  <dt><strong><%= model_class.human_attribute_name(:team2_score) %>:</strong></dt>
  <dd><%= @match.team2_score %></dd>
  <dt><strong><%= model_class.human_attribute_name(:season) %>:</strong></dt>
  <dd><%= @match.season %></dd>
</dl>

<%= link_to t('.back', :default => t("helpers.links.back")),
              matches_path, :class => 'btn btn-default'  %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_match_path(@match), :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              match_path(@match),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
